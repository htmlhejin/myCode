<view>
  <image class="bgimg" src="../../assets/image/bgimg.png"></image>
  <view class="top-answer">
    <view class="question">
      <text class="left-single">
      <text class="left-title">单</text>
      </text>
      {{paper.name}}
    </view>
    <view class="answer">
      <view class="line1">
        <view class="title">答题总分数
          <text class="totalScore">{{paper.grossScore}}</text>
          <text class="title">分</text>
        </view>
        <view class="title">总题数
          <text class="totalScore">{{paper.total}}</text>
          <text class="title">题</text>
        </view>
      </view>
      <view class="line2">
        <view class="title">答题总时长
          <text class="totalScore">{{paper.time}}</text>
          <text class="title">分</text>
        </view>
        <view class="title">难度
          <text class="totalScore">{{paper.difficulty}}</text>
          <text class="title">分</text>
        </view>
      </view>
    </view>
  </view>
  <button bindtap="response" class="btn">开始答题</button>
</view>